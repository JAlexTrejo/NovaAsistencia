# Nova HR - Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# ==============================================
# REQUIRED: Supabase Configuration
# ==============================================
# Get these from your Supabase project dashboard
# https://app.supabase.com/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ==============================================
# OPTIONAL: Feature Flags
# ==============================================
# Enable/disable specific features (1 = enabled, 0 = disabled)
VITE_FLAG_MOCK_DATA_DETECTION=0

# ==============================================
# OPTIONAL: AI Integrations
# ==============================================
# Only needed if using AI-powered features
VITE_OPENAI_API_KEY=
VITE_GEMINI_API_KEY=
VITE_ANTHROPIC_API_KEY=

# ==============================================
# OPTIONAL: Analytics & Monitoring
# ==============================================
# For production monitoring and analytics
VITE_GOOGLE_ANALYTICS_ID=
VITE_ADSENSE_ID=
VITE_SENTRY_DSN=

# ==============================================
# OPTIONAL: Third-Party Services
# ==============================================
# Add any other service API keys here
# VITE_STRIPE_PUBLIC_KEY=
# VITE_TWILIO_ACCOUNT_SID=
# VITE_AWS_ACCESS_KEY=
